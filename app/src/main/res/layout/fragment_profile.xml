<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.ProfileFragment"
    android:orientation="vertical"
    android:background="@color/app_background">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/profileFragmentToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_blue"
        app:titleTextColor="@color/white"
        app:title="Profil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profileFragmentImageConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/app_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileFragmentToolbar">

        <ImageView
            android:id="@+id/profileFragmentProfileImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:maxWidth="100dp"
            android:maxHeight="100dp"
            android:src="@drawable/ic_baseline_account_circle_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/profileFragmentNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_fragment_name_string"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileFragmentImageConstraintLayout"/>

    <TextView
        android:id="@+id/profileFragmentUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/profile_fragment_name_string"
        android:layout_marginEnd="32dp"
        android:textAlignment="viewEnd"
        app:layout_constraintBottom_toBottomOf="@+id/profileFragmentNameTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileFragmentImageConstraintLayout" />

    <TextView
        android:id="@+id/profileFragmentInstitutionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="@string/profile_fragment_institution_string"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileFragmentNameTextView" />

    <TextView
        android:id="@+id/profileFragmentInstitution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_fragment_example_institution"
        android:layout_marginEnd="32dp"
        android:textAlignment="viewEnd"
        app:layout_constraintBottom_toBottomOf="@+id/profileFragmentInstitutionTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profileFragmentInstitutionTextView" />

    <TextView
        android:id="@+id/profileFragmentEmailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:text="@string/profile_fragment_email_title"
        android:textStyle="bold"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/profileFragmentInstitutionTextView"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/profileFragmentUserEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_fragment_example_email"
        android:layout_marginEnd="32dp"
        android:textAlignment="viewEnd"
        app:layout_constraintBottom_toBottomOf="@+id/profileFragmentEmailTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profileFragmentEmailTitle" />

    <TextView
        android:id="@+id/profileFragmentPasswordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:text="@string/profile_fragment_password_title"
        android:textStyle="bold"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/profileFragmentEmailTitle"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/profileFragmentPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_fragment_example_password"
        android:layout_marginEnd="32dp"
        android:textAlignment="viewEnd"
        android:inputType="textPassword"
        android:focusable="false"
        android:clickable="false"
        app:layout_constraintBottom_toBottomOf="@+id/profileFragmentPasswordTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profileFragmentPasswordTextView" />

    <ImageView
        android:id="@+id/profileFragmentTogglePasswordIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_remove_red_eye_24"
        android:layout_marginEnd="16dp"
        app:tint="@color/grey"
        app:layout_constraintBottom_toBottomOf="@+id/profileFragmentPassword"
        app:layout_constraintEnd_toStartOf="@+id/profileFragmentPassword"
        app:layout_constraintTop_toTopOf="@+id/profileFragmentPassword" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/profileFragmentDeleteAccountButton"
        style="@style/wideRedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_fragment_delete_account"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileFragmentPasswordTextView" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/profileFragmentFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_create_24"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/white"
        style="@style/fabStyle"/>

</androidx.constraintlayout.widget.ConstraintLayout>