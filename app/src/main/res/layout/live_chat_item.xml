<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/liveChatItemAuthorImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_account_circle_24_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/liveChatItemAuthorAndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Autor - 15:25"
        android:layout_marginStart="8dp"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/liveChatItemAuthorImage"
        app:layout_constraintTop_toTopOf="@id/liveChatItemAuthorImage"
        app:layout_constraintBottom_toBottomOf="@id/liveChatItemAuthorImage"/>

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="8dp"
        app:contentPadding="8dp"
        app:layout_constraintStart_toEndOf="@id/liveChatItemAuthorImage"
        app:layout_constraintTop_toBottomOf="@id/liveChatItemAuthorAndDate"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/liveChatItemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dies ist eine beispielhafte Nachricht und nichts weiter als das"/>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>