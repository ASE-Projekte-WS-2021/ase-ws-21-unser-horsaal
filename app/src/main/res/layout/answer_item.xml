<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@color/white"
    android:layout_margin="16dp">

    <ImageView
        android:id="@+id/answerItemUserImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_account_circle_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/answerItemAuthor"
        app:tint="@color/black" />

    <TextView
        android:id="@+id/answerItemAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/answer_item_example_author"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/answerItemUserImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/answerItemTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/answer_item_example_time"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/answerItemAnswerText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/answer_item_example_answer"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/answerItemAuthor"
        app:layout_constraintTop_toBottomOf="@+id/answerItemAuthor"
        app:layout_constraintEnd_toEndOf="@+id/answerItemTime"/>

    <View
        android:id="@+id/answerItemHorizontalLine"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:background="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/answerItemAnswerText" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/answerItemHorizontalLine">

        <TextView
            android:id="@+id/answerItemLikeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/answer_item_like_example"
            />

        <ImageView
            android:id="@+id/answerItemLikeIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:clickable="true"
            android:src="@drawable/ic_baseline_thumb_up_24" />

        <TextView
            android:id="@+id/answerItemDislikeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/answer_item_dislike_example" />

        <ImageView
            android:id="@+id/answerItemDislikeIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_thumb_down_24"
            android:layout_marginStart="16dp"
            android:clickable="true" />

    </LinearLayout>

    <ImageView
        android:id="@+id/answerItemSolvedIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_check_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>