<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="32dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp">

    <TextView
        android:id="@+id/questionDateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="16:45"
        android:textAlignment="center"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:id="@+id/questionBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_corners"
        android:backgroundTint="@color/blue"
        android:padding="16dp">

        <TextView
            android:id="@+id/questionTextTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            tools:text="Dies ist ein Beispieltext für eine beispielhafte Frage lorem ipsum lorem ipsum lorem ipsumlalskdjflaskdjfölakjdfsaaaaa aljöksadf laskdfjlkasdjflkjsfdlö jsdfflsdfjjf lsdj sdjkllsj ölfdjal sdjdfj löjaklsdjkf lajsdf "
            />

    </LinearLayout>

</LinearLayout>