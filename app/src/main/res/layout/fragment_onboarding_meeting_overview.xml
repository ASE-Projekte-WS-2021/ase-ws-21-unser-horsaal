<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/app_background">

                <TextView
                    android:id="@+id/onboardingMeetingOverviewFragmentText1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="40dp"
                    android:textSize="25sp"
                    android:textColor="@color/app_blue"
                    android:textStyle="bold"
                    android:text="@string/onboarding_meeting_overview_headline" />

                <TextView
                    android:id="@+id/onboardingMeetingOverviewFragmentText2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="40dp"
                    android:textSize="15sp"
                    android:text="@string/onboarding_meeting_overview_text_1"
                    android:layout_below="@+id/onboardingMeetingOverviewFragmentText1"
                    android:layout_marginTop="10dp" />

                <ImageView
                    android:id="@+id/onboardingMeetingOverviewFragmentImage"
                    android:src="@drawable/sitzung_fertig"
                    android:layout_below="@+id/onboardingMeetingOverviewFragmentText2"
                    android:layout_width="400dp"
                    android:layout_height="400dp"
                    android:layout_marginVertical="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>

</layout>