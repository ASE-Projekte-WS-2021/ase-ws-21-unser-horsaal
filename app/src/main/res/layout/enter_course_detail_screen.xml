<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/enterCourseDetailScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/enterCourseFragmentOverlayLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="64dp"
        android:background="@color/app_background"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/enterCourseFragmentCourseTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enter_course_fragment_course_titel"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/enterCourseFragmentCourseCreator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/enter_course_fragment_course_creator"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/enterCourseFragmentCourseInstitution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/enter_course_fragment_course_institution"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/enterCourseFragmentCourseDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/enter_course_fragment_course_description"
            android:textAlignment="center" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/enterCourseFragmentEnterCourseButton"
            style="@style/wideOrangeButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/enter_course_fragment_enter_button_string" />

    </LinearLayout>

    <ImageView
        android:id="@+id/enterCourseDetailScreenCloseIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_baseline_close_24_black"
        app:layout_constraintEnd_toEndOf="@+id/enterCourseFragmentOverlayLinearLayout"
        app:layout_constraintTop_toTopOf="@id/enterCourseFragmentOverlayLinearLayout"/>


</androidx.constraintlayout.widget.ConstraintLayout>