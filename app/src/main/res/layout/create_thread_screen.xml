<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/createThreadScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/createThreadOverlayLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="64dp"
        android:background="@color/app_background"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/createThreadTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/create_thread_title"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/createThreadQuestionTitleTextInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:hint="@string/create_thread_screen_question_title_hing"
            style="@style/textInputField"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/createThreadQuestionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/createThreadQuestionTextTextInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:hint="@string/create_thread_screen_question_text_hint"
            style="@style/textInputField"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/createThreadQuestionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:maxLines="6"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/createThreadScreenSendQuestion"
            style="@style/wideOrangeButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/create_thread_send_message" />

    </LinearLayout>

    <ImageView
        android:id="@+id/createThreadScreenCloseScreen"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_baseline_close_24_black"
        app:layout_constraintEnd_toEndOf="@+id/createThreadOverlayLinearLayout"
        app:layout_constraintTop_toTopOf="@id/createThreadOverlayLinearLayout"/>


</androidx.constraintlayout.widget.ConstraintLayout>