<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="wideBlueButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="cornerRadius">4dp</item>
        <item name="backgroundTint">@color/app_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="wideOrangeButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="cornerRadius">4dp</item>
        <item name="backgroundTint">@color/orange</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="wideRedButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="cornerRadius">4dp</item>
        <item name="backgroundTint">@color/red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textInputField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="cornerRadius">4dp</item>
        <item name="boxStrokeColor">@color/app_blue</item>
        <item name="hintTextColor">@color/app_blue</item>
    </style>

    <style name="loginRegistrationTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">44sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="coursesTabItem" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/light_green</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabTextAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
        <item name="tabTextColor">@color/white</item>
    </style>

    <style name="fabStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/orange</item>
    </style>
</resources>