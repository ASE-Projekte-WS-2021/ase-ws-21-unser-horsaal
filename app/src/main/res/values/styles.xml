<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="wideBlueButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="cornerRadius">4dp</item>
        <item name="backgroundTint">@color/button_blue_state</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="wideOrangeButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@color/button_orange_state</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="wideRedButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@color/button_red_state</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textInputField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="cornerRadius">8dp</item>
        <item name="boxStrokeColor">@color/app_blue</item>
        <item name="hintTextColor">@color/app_blue</item>
    </style>

    <style name="loginRegistrationTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="coursesTabItem" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/call_to_action_orange</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="android:textSize">20sp</item>
        <item name="tabTextColor">@color/white</item>
    </style>

    <style name="fabStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/call_to_action_orange</item>
    </style>

    <style name="toolbarTitleStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="toolbarSubtitleStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="dateTimePickerStyle" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/app_blue</item>
        <item name="android:colorControlActivated">@color/app_blue</item>
        <item name="android:textColorSecondary">@color/app_blue</item>
    </style>

    <style name="threadChipStyle" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:layout_marginEnd">8dp</item>
        <item name="chipIconTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="chipMinHeight">24dp</item>
        <item name="chipMinTouchTargetSize">24dp</item>
        <item name="chipIconSize">16dp</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="createThreadChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipIconTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="chipIconSize">16dp</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="inputField" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxStrokeColor">@color/app_blue</item>
    </style>

    <style name="headerTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/app_blue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>