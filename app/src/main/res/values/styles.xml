<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="wideBlueButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="cornerRadius">4dp</item>
        <item name="backgroundTint">@color/app_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textInputField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="cornerRadius">4dp</item>
        <item name="boxStrokeColor">@color/app_blue</item>
        <item name="hintTextColor">@color/app_blue</item>
    </style>

    <style name="loginRegistrationTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">44sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>